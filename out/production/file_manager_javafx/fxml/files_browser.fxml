<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.dariuszpaluch.java.FilesTableView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.dariuszpaluch.java.FilesBrowserController"
      stylesheets="@/styles/files_browser.css">

    <FlowPane>
        <Button fx:id="goUpButton" >
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image>
                        <Image url="@/images/arrow_up.png"/>
                    </image>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="asdasdasd"/>
            </tooltip>
        </Button>
        <Button fx:id="refreshButton">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image>
                        <Image url="@/images/refresh.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <ChoiceBox fx:id="driveChoiceBox" />
    </FlowPane>
    <Text text="currentPath" fx:id="currentPathText"/>

    <FilesTableView fx:id="filesTableView" HBox.hgrow="ALWAYS"/>

</VBox>
