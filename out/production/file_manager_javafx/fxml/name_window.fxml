<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root alignment="center" stylesheets="@/styles/name_window.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">

    <Text fx:id="nameLabelTextField" text="nameLabel">
      <VBox.margin>
         <Insets bottom="5.0" />
      </VBox.margin></Text>
    <TextField fx:id="nameTextField" />
  <Text fx:id="errorText" >
    <VBox.margin>
      <Insets bottom="5.0" />
    </VBox.margin>
  </Text>
    <FlowPane alignment="BASELINE_CENTER">
      <Button fx:id="cancelButton" text="cancel">
         <FlowPane.margin>
            <Insets right="20.0" />
         </FlowPane.margin></Button>
      <Button fx:id="saveButton" text="save">
         <FlowPane.margin>
            <Insets left="20.0" />
         </FlowPane.margin></Button>
    </FlowPane>
</fx:root>
