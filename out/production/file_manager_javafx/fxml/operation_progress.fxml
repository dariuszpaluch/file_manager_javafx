<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ProgressBar?>
<fx:root type="javafx.scene.layout.FlowPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">

  <FlowPane prefWrapLength="0.0">
    <Text fx:id="removingFilesText" text="removingFilesText" />
    <Text fx:id="removingPathText" text="removingPathText" />

    <FlowPane>
      <Text fx:id="sizeTitleText" text="sizeTitleText" />
      <Text fx:id="sizeText" text="sizeText" />
    </FlowPane>
  </FlowPane>

  <FlowPane>
    <ProgressBar fx:id="progressBar" />
    <ProgressIndicator fx:id="progressIndicator" prefHeight="25"/>
  </FlowPane>

  <FlowPane>
    <Text fx:id="totalSizeText" />
    <Button fx:id="cancelButton" text="cancel" />
  </FlowPane>
</fx:root>
